{
	"name": "block-theme",
	"version": "0.0.1",
	"description": "A starter theme for modern WordPress developers.",
	"author": "BlockTheme Contributors",
	"license": "GPL-2.0-or-later",
	"keywords": [
		"wordpress",
		"starter",
		"theme"
	],
	"homepage": "https://github.com/bacoords/block-theme#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bacoords/block-theme.git"
	},
	"bugs": {
		"url": "https://github.com/bacoords/block-theme/issues"
	},
	"main": "index.js",
	"devDependencies": {
		"@wordpress/scripts": "^27.6.0",
		"glob": "^8.1.0",
		"nodemon": "^3.1.0",
		"remove-files-webpack-plugin": "^1.5.0"
	},
	"scripts": {
		"lint:pkg-json": "wp-scripts lint-pkg-json",
		"build": "wp-scripts build --config ./bin/webpack.config.js --webpack-src-dir=src/blocks",
		"create-block": "cd ./src/blocks && npx @wordpress/create-block --namespace=block-theme --no-plugin --variant=dynamic",
		"dev:compile": "wp-scripts start --config ./bin/webpack.config.js --webpack-src-dir=src/blocks --no-watch",
		"start": "nodemon --watch ./src --ext js,css,scss,php,json --exec \"npm run dev:compile\""
	}
}
