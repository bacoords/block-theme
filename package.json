{
  "name": "tangent",
  "version": "0.0.0",
  "description": "A theme starter for the modern WordPress developer.",
  "main": "index.js",
  "watch": {
	"themejson": {
        "patterns": ["src", "theme-json"],
        "extensions": "jsonc",
        "quiet": false
      }
  },
  "scripts": {
    "themejson": "node ./bin/theme-json.js",
    "build": "wp-scripts build --config ./bin/webpack.config.js  --webpack-src-dir=src/blocks/",
    "start": "concurrently \"wp-scripts start --config ./bin/webpack.config.js --webpack-src-dir=src/blocks\" \"npm-watch themejson\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/understrap/tangent.git"
  },
  "author": "Howard Development & Consulting",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/understrap/tangent/issues"
  },
  "homepage": "https://github.com/understrap/tangent#readme",
  "keywords": [
    "wordpress",
    "starter",
    "theme"
  ],
  "devDependencies": {
    "@wordpress/scripts": "^25.3.0",
    "concurrently": "^7.6.0",
    "sass": "^1.58.0",
    "sass-loader": "^13.2.0",
	"remove-files-webpack-plugin": "^1.5.0",
	"fs-extra": "^11.1.0",
    "glob": "^8.1.0",
    "jsonc": "^2.0.0",
    "lodash.set": "^4.3.2",
	"npm-watch": "^0.11.0"
  }
}
