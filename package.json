{
  "name": "tangent",
  "version": "0.0.0",
  "description": "A theme starter for the modern WordPress developer.",
  "main": "index.js",
  "scripts": {
    "themejson": "node ./bin/theme-json.js",
    "css-compile": "(sass --style compressed --source-map --embed-sources --no-error-css --quiet src/scss/editor.scss:css/editor.css) & (sass --style compressed --source-map --embed-sources --no-error-css --quiet src/scss/global.scss:css/global.css)",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "wp-scripts build --config ./bin/webpack.config.js",
    "start": "wp-scripts start --config ./bin/webpack.config.js --webpack-src-dir=src/blocks/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/understrap/tangent.git"
  },
  "author": "Howard Development & Consulting",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/understrap/tangent/issues"
  },
  "homepage": "https://github.com/understrap/tangent#readme",
  "keywords": [
    "wordpress",
    "starter",
    "theme"
  ],
  "dependencies": {
    "fs-extra": "^11.1.0",
    "glob": "^8.1.0",
    "jsonc": "^2.0.0",
    "lodash.set": "^4.3.2",
    "remove-files-webpack-plugin": "^1.5.0"
  },
  "devDependencies": {
    "@wordpress/scripts": "^25.3.0",
    "sass": "^1.58.0",
    "sass-loader": "^13.2.0",
    "webpack-cli": "^5.0.1"
  }
}
